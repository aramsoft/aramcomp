<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
    <formset>
        <form name="authorVO">
        
            <field property="authorCode" depends="required, maxlength">
                <arg0 key="권한 코드" resource="false"/>
                <arg1 key="30" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>30</var-value>
				</var>
            </field>
            
            <field property="authorNm" depends="required, maxlength">
                <arg0 key="권한 명" resource="false"/>
                <arg1 key="60" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>60</var-value>
				</var>
            </field>
            
            <field property="authorDc" depends="maxlength">
                <arg0 key="설명" resource="false"/>
                <arg1 key="200" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>200</var-value>
				</var>
            </field>    
 
        </form>
    </formset>

    <formset>
        <form name="deptVO">

            <field property="orgnztNm" depends="required">
                <arg0 key="부서명" resource="false"/>
                <arg1 key="60" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>60</var-value>
				</var>
            </field>

        </form>
    </formset>

    <formset>
        <form name="groupVO">

            <field property="groupNm" depends="required, maxlength">
                <arg0 key="그룹 명" resource="false"/>
                <arg1 key="60" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>60</var-value>
				</var>
            </field>

            <field property="groupDc" depends="maxlength">
                <arg0 key="설명" resource="false"/>
                <arg1 key="100" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>100</var-value>
				</var>
            </field>

        </form>
    </formset>

    <formset>
        <form name="resourceVO">

            <field property="resourceNm" depends="required, maxlength">
                <arg0 key="접근자원 명" resource="false"/>
                <arg1 key="60" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>60</var-value>
				</var>
            </field>

            <field property="resourcePttrn" depends="required, maxlength">
                <arg0 key="접근자원  패턴" resource="false"/>
                <arg1 key="300" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>300</var-value>
				</var>
            </field>
            <field property="resourceDc" depends="maxlength">
                <arg0 key="접근자원  설명" resource="false"/>
                <arg1 key="200" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>200</var-value>
				</var>
            </field>

            <field property="resourceSort" depends="required, integer, maxlength">
                <arg0 key="접근자원 Sort" resource="false"/>
                <arg1 key="10" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>10</var-value>
				</var>
            </field>            

        </form>
    </formset>
 </form-validation>