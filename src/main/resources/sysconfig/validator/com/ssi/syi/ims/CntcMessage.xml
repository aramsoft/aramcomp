<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
    <formset>
        <form name="cntcMessageVO">
        
			<field property="cntcMessageNm" depends="required, maxlength">
        		<arg0 key="연계메시지명" resource="false"/>
        		<arg1 key="60" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>60</var-value>
				</var>
			</field> 
			
		</form>
		
        <form name="cntcMessageItemVO">
        
			<field property="cntcMessageId" depends="required, maxlength">
        		<arg0 key="연계메시지ID" resource="false"/>
        		<arg1 key="20" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>20</var-value>
				</var>
			</field> 
			
			<field property="itemNm" depends="required, maxlength">
        		<arg0 key="항목명" resource="false"/>
        		<arg1 key="100" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>60</var-value>
				</var>
			</field> 
			
			<field property="itemType" depends="maxlength">
        		<arg0 key="항목타입" resource="false"/>
        		<arg1 key="20" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>60</var-value>
				</var>
			</field> 
			
            <field property="itemLt" depends="integer">
                <arg0 key="항목길이" resource="false"/>
            </field>  
                      
		</form>
    </formset>
</form-validation>