<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
    <formset>
		<form name="passwordVO">
		
			<field property="id" depends="required">
        		<arg0 key="아이디" resource="false"/>
			</field>
			
			<field property="name" depends="required">
        		<arg0 key="이름" resource="false"/>
			</field>
			
			<field property="email" depends="required, email">
        		<arg0 key="이메일" resource="false"/>
			</field>
			
			<field property="passwordHint" depends="required">
        		<arg0 key="비밀번호힌트" resource="false"/>
			</field>
			
			<field property="passwordCnsr" depends="required">
        		<arg0 key="비밀번호정답" resource="false"/>
			</field>
			
		</form>
    </formset>
</form-validation>