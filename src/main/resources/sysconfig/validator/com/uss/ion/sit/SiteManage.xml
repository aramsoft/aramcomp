<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
    <formset>
		<form name="siteManageVO">

			<field property="siteNm" depends="required, maxlength">
        		<arg0 key="siteManageVO.siteNm" resource="true"/>
        		<arg1 key="100" resource="true"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>100</var-value>
				</var>
			</field> 

			<field property="siteUrl" depends="required, maxlength">
        		<arg0 key="siteManageVO.siteUrl" resource="true"/>
        		<arg1 key="100" resource="false"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>100</var-value>
				</var>
			</field>
						
			<field property="siteDc" depends="required, maxlength">
        		<arg0 key="siteManageVO.siteDc" resource="true"/>
        		<arg1 key="1000" resource="true"/>
				<var>
				<var-name>maxlength</var-name>
				<var-value>1000</var-value>
				</var>
			</field> 

			<field property="siteThemaClCode" depends="required">
        		<arg0 key="siteManageVO.siteThemaClCode" resource="true"/>
			</field> 
			
		</form>
    </formset>
</form-validation>