<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
						http://www.springframework.org/schema/aop 
						http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

	<!--  login Log Aspect -->
	<bean id="loginlogAdvice" class="aramframework.com.cmm.advice.LoginLogAdvice" />
	<aop:config>
		<aop:aspect id="loginLogAspect" ref="loginlogAdvice">
			<aop:after  pointcut="execution(public * aramframework.com.uat.uia.web.LoginController.actionMain(..))"   method="logLogin" />
			<aop:before pointcut="execution(public * aramframework.com.uat.uia.web.LoginController.actionLogout(..))" method="logLogout" />
		</aop:aspect>
	</aop:config>
<!-- 
	<bean id="login.listener" class="aramframework.com.cmm.listener.LoginLogListener" />
-->

	<!--  자료이용현황 통계자료 생성 --> 
    <aop:config>
        <aop:aspect id="dtaUseStatsManageAspect" ref="dtaUseStatsService">
            <aop:after method="insertDtaUseStats" pointcut="execution(public * aramframework.com.cmm.web.FileDownloadController.cvplFileDownload(..)) and args(commandMap, ..)" />
        </aop:aspect>
    </aop:config>
	
</beans>